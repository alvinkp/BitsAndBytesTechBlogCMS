<container id="blog-post">

</container>
<container id="comment-container">

</container>
{{#if isLoggedIn}}
  <div class="d-flex justify-content-center">
    <form class="form blog-form w-50 flex-column">

      <div class="mb-3">
        <label for="content" class="form-label mt-5">Comment</label>
        <textarea class="form-control" id="content" rows="5"></textarea>
      </div>

      <div class="d-flex flex-direction-row justify-content-end" >

      <div class="form-group d-flex justify-content-end invisible" id="cancel">
        <button class="btn btn-secondary mx-2 mt-2" onclick="cancelAction">Cancel</button>
      </div>

        <div class="form-group d-flex justify-content-end invisible" id="delete">
        <button class="btn btn-danger mx-2 mt-2" onclick="deleteComment">Delete</button>
      </div>

      <div class="form-group d-flex justify-content-end invisible" id="update">
        <button class="btn btn-success mx-2 mt-2" onclick="updateFormHandler">Update</button>
      </div>

       <div class="form-group d-flex justify-content-end visible" id="submit">
        <button class="btn btn-primary mx-2 mt-2" onclick="commentFormHandler">Submit</button>
      </div>

    </div>
     
    </form>
  </div>

  </div>
{{/if}}
<script src="/javascript/addComment.js"></script>